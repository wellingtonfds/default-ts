      "eslint-plugin-import": "^2.20.2",
      "ts-node": "^8.10.1",
      "typescript": "3.3.3333"
   },
   "nodemonConfig": {
      "ignore": [
         "dist",
         ".git",
         "node_modules"
      ],
      "watch": [
         "src"
