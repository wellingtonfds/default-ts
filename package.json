{
  "name": "my-node-ts-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "node dist/app.js",
    "build": "tsc",
    "dev": "nodemon --watch src/ --inspect -e ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "eslint": "eslint src/app.ts",
    "lint": "./node_modules/eslint/bin/eslint.js  src --ext .ts",
    "fix-lint": "./node_modules/eslint/bin/eslint.js  src --ext .ts --fix"
  },
  "author": "Diogenes Morais",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "googleapis": "^49.0.0",
    "helmet": "^3.22.0",
    "mongoose": "^5.9.10",
    "nodemon": "^2.0.3",
    "ts-node": "^8.9.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/mongoose": "^5.7.12",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "typescript": "^3.8.3"
  },
  "nodemonConfig": {
    "ignore": [
      "dist",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run eslint && ts-node src/app.ts",
    "ext": "ts"
  }
}
