{
  "compilerOptions": {
    "rootDir": "src",
    "pretty": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators":true,
    "emitDecoratorMetadata":true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": [
        "node_modules/@types"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ],
    },
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}
